{
  "manifest_version": 2,

  "name": "xkcd+",
  "description": "Adds features to xkcd.com: arrow key navigation, R for random, title text inline",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["http://xkcd.com/*", "http://www.xkcd.com/*", "https://xkcd.com/*", "https://www.xkcd.com/*"],
      "js": ["jquery.min.js", "content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}